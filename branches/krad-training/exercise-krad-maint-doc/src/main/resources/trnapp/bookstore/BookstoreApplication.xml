<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="BookstoreView" abstract="true" parent="Uif-FormView">
    <property name="additionalCssFiles">
      <list>
        <value>http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css</value>
        <value>http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css</value>
	<value>css/justified-nav.css</value>
	<value>css/bookstore.css</value>
      </list>
    </property>
    <property name="additionalScriptFiles">
      <list>
        <value>http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js</value>
        <value>scripts/bookstore.js</value>
      </list>
    </property>
    <property name="applicationHeader" ref="BookstoreHeader"/>
    <property name="applicationFooter" ref="BookstoreFooter"/>
    <property name="breadcrumbs.render" value="false"/>
    <property name="singlePageView" value="true"/>
  </bean>
  
  <bean id="BookstoreHeader" parent="Uif-GlobalApplicationHeader-parentBean"
            p:template="/WEB-INF/ftl/bookstoreHeader.ftl"
            p:templateName="bookstore_header"
            p:render="true"/>
            
  <bean id="BookstoreFooter" parent="Uif-GlobalApplicationFooter-parentBean"
            p:template="/WEB-INF/ftl/bookstoreFooter.ftl"
            p:templateName="bookstore_footer"
            p:render="true"/>
  
  <bean id="Landing" parent="BookstoreView">
    <property name="page">
      <bean parent="Uif-Page">
	<property name="cssClasses">
	  <list>
	    <value>container</value>
	  </list>
	</property>
	<property name="items">
	  <list>
	    <ref bean="BookstoreApplication-Cards" />
	  </list>
	</property>
      </bean>
    </property>	 
  </bean>

  <bean id="BookstoreApplication-Cards" parent="Uif-HorizontalBoxGroup">
    <property name="cssClasses">
      <list>
	<value>row</value>
      </list>
    </property>
    <property name="items">
      <list>
	<bean parent="Uif-Card" class="trnapp.bookstore.Card" p:labelText="Author Lookup" p:url="@{#ConfigProperties['application.url']}/kr-krad/lookup?methodToCall=start&amp;dataObjectClassName=trnapp.bookstore.Author&amp;showMaintenanceLinks=true" />
	<bean parent="Uif-Card" class="trnapp.bookstore.Card" p:labelText="Book Lookup" p:url="@{#ConfigProperties['application.url']}/kr-krad/lookup?methodToCall=start&amp;dataObjectClassName=trnapp.bookstore.Book&amp;showMaintenanceLinks=true" />
      </list>
    </property>
  </bean>
  
  <bean id="Uif-Card" parent="Uif-Card-parentBean" />

  <bean id="Uif-Card-parentBean" abstract="true" class="trnapp.bookstore.Card"
        parent="Uif-ContentElementBase" scope="prototype">
    <property name="template" value="/WEB-INF/ftl/components/elements/card.ftl"/>
    <property name="templateName" value="uif_card"/>
    <property name="cssClasses">
      <list>
        <value>uif-card col-lg-4</value>
      </list>
    </property>
  </bean>
</beans>
