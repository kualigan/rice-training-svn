<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:p="http://www.springframework.org/schema/p" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	 	  
    <bean id="bookstoreModuleConfiguration" class="org.kuali.rice.krad.bo.ModuleConfiguration">
        <property name="initializeDataDictionary" value="true"/>
        <property name="dataDictionaryPackages">
          <list>
            <value>classpath:trnapp/bookstore/datadictionary</value>
<!--        <value>classpath:trnapp/bookstore/department/datadictionary</value> -->
          </list>
        </property>
    
        <property name="namespaceCode" value="bookstore"/>
        <property name="databaseRepositoryFilePaths">
          <list>
            <value>trnapp/bookstore/OJB-repository-bookstore.xml</value>
            <value>trnapp/bookstore/department/OJB-repository-department.xml</value>
          </list>
        </property>
        <property name="packagePrefixes">
          <list>
            <value>trnapp.bookstore</value>
            <value>trnapp.bookstore.department</value>
          </list>
        </property>
    </bean>

    <bean id="bookstoreModuleService" class="org.kuali.rice.krad.service.impl.ModuleServiceBase">
        <property name="moduleConfiguration" ref="bookstoreModuleConfiguration" />
    </bean>
    
    <bean id="departmentService" class="trnapp.bookstore.department.DepartmentServiceImpl" />
    
    <bean id="departmentRoleTypeService" class="trnapp.bookstore.department.DepartmentRoleTypeService">
        <property name="departmentService" ref="departmentService" />
    </bean>
    
    <bean id="departmentHeadRoleTypeService" class="trnapp.bookstore.department.DepartmentHeadRoleTypeService">
        <property name="departmentService" ref="departmentService" />
    </bean>    
</beans>